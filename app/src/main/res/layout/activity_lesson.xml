<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/block_top_rounded">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/icon_lesson_back"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="-20dp"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/arrow_left_white" />

                            <TextView
                                android:id="@+id/text_lesson_top"
                                style="@style/TextAppearance.Material3.BodyMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/open_sans"
                                android:text="Подробнее об уроке"
                                android:textFontWeight="600"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/course_title"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="15dp"
                            android:text="Урок на курсе"
                            android:textFontWeight="700"
                            android:fontFamily="@font/open_sans"
                            android:textSize="30dp"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/btn_lesson_main"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:background="@drawable/button_light"
                            android:fontFamily="@font/open_sans"
                            android:paddingTop="7sp"
                            android:paddingBottom="7sp"
                            android:text="Открыть на сайте"
                            android:textAllCaps="false"
                            android:textFontWeight="600"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/lesson_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp" />

                    <!-- Lesson !-->
                    <TextView
                        android:id="@+id/text_lesson_b1_m"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Урок"
                        android:textFontWeight="700"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/text_lesson_b1_1"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Cсылка на видеоурок"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_lesson_b1_1_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/text_lesson_b1_2"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Время урока"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_lesson_b1_2_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/text_lesson_b1_3"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Материал урока"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_lesson_b1_3_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/btn_lesson_1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20sp"
                        android:background="@drawable/button_rounded_corners_two"
                        android:fontFamily="@font/open_sans"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:text="Открыть видеоурок"
                        android:textAllCaps="false"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="30dp"/>

                    <!-- Hometask !-->
                    <TextView
                        android:id="@+id/text_lesson_b2_m"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Домашнее задание"
                        android:textFontWeight="700"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/text_lesson_b2_1"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Надо выполнить до:"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_lesson_b2_1_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/text_lesson_b2_2"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Комментарий"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_lesson_b2_2_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>