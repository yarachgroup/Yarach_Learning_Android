<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin_two"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin_two"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settings_back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="-25dp"
                app:srcCompat="@drawable/arrow_left" />

            <TextView
                android:id="@+id/text_settings_top"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/open_sans"
                android:text="Настройки профиля"
                android:textFontWeight="600"
                android:textSize="20dp"
                android:textAlignment="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/settings_top_img"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/settings_top_title"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/open_sans"
            android:text="Секунду..."
            android:textFontWeight="600"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/settings_top_about"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/open_sans"
            android:text="Мы уже загружаем..."
            android:textSize="17dp"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/settings_1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:background="@drawable/button_rounded_corners_two"
            android:padding="15dp">

            <ImageView
                android:id="@+id/settings_1_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-30dp"
                app:srcCompat="@drawable/settings_account" />

            <TextView
                android:id="@+id/settings_1_text"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/open_sans"
                android:text="Управлять акаунтом"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:background="@drawable/button_rounded_corners_two"
            android:padding="15dp">

            <ImageView
                android:id="@+id/settings_2_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-30dp"
                app:srcCompat="@drawable/settings_chats" />

            <TextView
                android:id="@+id/settings_2_text"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/open_sans"
                android:text="Мои чаты"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:background="@drawable/button_rounded_corners_two"
            android:padding="15dp">

            <ImageView
                android:id="@+id/settings_3_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-30dp"
                app:srcCompat="@drawable/settings_disk" />

            <TextView
                android:id="@+id/settings_3_text"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/open_sans"
                android:text="Мой диск"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:background="@drawable/button_rounded_corners_two"
            android:padding="15dp">

            <ImageView
                android:id="@+id/settings_4_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-30dp"
                app:srcCompat="@drawable/settings_notes" />

            <TextView
                android:id="@+id/settings_4_text"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/open_sans"
                android:text="Мои заметки"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_5_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:background="@drawable/button_rounded_corners_two"
            android:padding="15dp">

            <ImageView
                android:id="@+id/settings_6_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-30dp"
                app:srcCompat="@drawable/settings_logout" />

            <TextView
                android:id="@+id/settings_6_text"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/open_sans"
                android:text="Выйти"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>