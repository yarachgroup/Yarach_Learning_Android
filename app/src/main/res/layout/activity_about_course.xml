<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutCourseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/block_top_rounded">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/icon_course_back"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="-20dp"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/arrow_left_white" />

                            <TextView
                                android:id="@+id/text_course_top"
                                style="@style/TextAppearance.Material3.BodyMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/open_sans"
                                android:text="Подробнее о курсе"
                                android:textFontWeight="600"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/course_title"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="15dp"
                            android:text="Уже загружаем..."
                            android:textFontWeight="700"
                            android:fontFamily="@font/open_sans"
                            android:textSize="30dp"
                            android:textColor="#ffffff"
                            android:textIsSelectable="true" />

                        <TextView
                            android:id="@+id/course_about"
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Подождите немного"
                            android:fontFamily="@font/open_sans"
                            android:textSize="18dp"
                            android:textFontWeight="400"
                            android:textColor="#ffffff"
                            android:textIsSelectable="true" />

                        <TextView
                            android:id="@+id/btn_course_main"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30sp"
                            android:background="@drawable/button_light"
                            android:fontFamily="@font/open_sans"
                            android:paddingTop="7sp"
                            android:paddingBottom="7sp"
                            android:text="Открыть на сайте"
                            android:textAllCaps="false"
                            android:textFontWeight="600"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/course_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp" />

                    <!-- Main !-->
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_m"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/open_sans"
                        android:text="О курсе"
                        android:textFontWeight="700"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b1_1"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Организатор"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_1_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b1_2"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Продолжительность"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_2_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b1_3"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Категория"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_3_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b1_4"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Уровень курса"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_4_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b1_5"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Период оплаты"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_5_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b1_6"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Язык"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b1_6_2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />

                    <!-- Teacher !-->

                    <TextView
                        android:id="@+id/text_aboutcourse_b2_m"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Об организаторе и контакты"
                        android:textFontWeight="700"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/text_aboutcourse_b2_1"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />
                    <TextView
                        android:id="@+id/btn_aboutcourse_1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/button_rounded_corners_two"
                        android:fontFamily="@font/open_sans"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:text="Написать преподавателю"
                        android:textAllCaps="false"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <!-- Certificate !-->
                    <TextView
                        android:id="@+id/text_aboutcourse_b3_m"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/open_sans"
                        android:text="О сертификате"
                        android:textFontWeight="700"
                        android:textSize="30dp" />
                    <TextView
                        android:id="@+id/text_aboutcourse_b3_1"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Секунду..."
                        android:textSize="18dp"
                        android:textIsSelectable="true" />


                    <!-- Lessons !-->
                    <TextView
                        android:id="@+id/text_aboutcourse_b4_m"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Уроки курса"
                        android:textFontWeight="700"
                        android:textSize="30dp" />
                    <TextView
                        android:id="@+id/btn_aboutcourse_2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="30sp"
                        android:background="@drawable/button_rounded_corners"
                        android:fontFamily="@font/open_sans"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:text="Смотреть уроки"
                        android:textAllCaps="false"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        android:clickable="true"/>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>